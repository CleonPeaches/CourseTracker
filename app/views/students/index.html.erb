<p id="notice"><%= notice %></p>

<h1>Students</h1>

<%= form_tag(search_students_url, method: "get") do %>
  <%= label_tag(:query, "Search for:") %>
  <%= text_field_tag(:query) %>
  <%= submit_tag("Search") %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Nine Hundred Number</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% x = Enrollment.all %>
    <% x.each do |enrollment| %>
      <tr>
        <td><%= enrollment.student.name %></td>
        <td><%= enrollment.student.nine_hundred_number %></td>
        <td><%= enrollment.section.to_s %></td>
        <td><%= link_to 'Show', enrollment %></td>
        <td><%= link_to 'Edit', edit_student_path(enrollment) %></td>
        <td><%= link_to 'Destroy', enrollment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path %>
